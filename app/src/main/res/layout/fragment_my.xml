<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:background="@drawable/image_personal_user_bg_top">

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@drawable/image_personal_head_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image"
                android:text="登陆/注册"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <com.example.liu.myappmao.customView.CustomMyLinearView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true">

            </com.example.liu.myappmao.customView.CustomMyLinearView>
        </RelativeLayout>

        <LinearLayout
            style="@drawable/my_layout_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/my_layout_style"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_personal_taobao_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="我的订单" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="18dp"
                    android:background="#20000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_personal_taobao_cart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="我的购物车" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/wode_icon_like" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="我的收藏"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/wode_icon_history" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="浏览记录"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <RadioGroup

                android:id="@+id/my_fragment_radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/my_fragment_yj"
                    style="@style/my_fragment_radiogroup_style"
                    android:button="@drawable/wode_icon_feedback"
                    android:text="意见反馈"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/my_fragment_kf"
                    style="@style/my_fragment_radiogroup_style"
                    android:button="@drawable/wode_icon_servicer"
                    android:text="联系客服"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/my_fragment_bz"
                    style="@style/my_fragment_radiogroup_style"
                    android:button="@drawable/wode_icon_help"
                    android:text="领券帮助"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/my_fragment_fx"
                    style="@style/my_fragment_radiogroup_style"
                    android:button="@drawable/wode_icon_share"
                    android:text="分享App"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/my_frragment_bb"
                    style="@style/my_fragment_radiogroup_style"
                    android:button="@drawable/wode_icon_update"
                    android:text="版本更新"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/my_fragment_gy"
                    style="@style/my_fragment_radiogroup_style"
                    android:button="@drawable/wode_icon_about"
                    android:text="关于"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>


