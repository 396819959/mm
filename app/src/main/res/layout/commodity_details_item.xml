<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.liu.myappmao.customView.CustomSimpleView
        app:fill_width="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.example.liu.myappmao.customView.CustomDetailsImageView
            android:id="@+id/commodity_imageView_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_norm_status_goods_list_none" />
    </com.example.liu.myappmao.customView.CustomSimpleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commodity_tm_logo_id"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_detail_tmall" />

        <TextView
            android:id="@+id/commodity_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="测试标题,123456789abcdefg.ABCDEFG!"
            android:textSize="18sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="券后价："
            android:textColor="#FA8072" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/commodity_qhj_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234.56"
            android:textColor="#FA8072"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="天猫价："
            android:textColor="#80000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/commodity_tmj_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234.56"
            android:textColor="#80000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
       >

    </LinearLayout>


    <TextView
        android:id="@+id/commodity_introduce_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品文案" />
</LinearLayout>